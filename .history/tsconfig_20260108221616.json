{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "outDir": "dist",
    "noEmit": false,
    "jsx": "react-jsx",      // optional, but safe if your backend has TSX imports
    "isolatedModules": false // needed for tsc to compile backend TS files
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.tsx", "**/*.ts?x", ".next"]
}
