{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",          
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "incremental": true
  },
  "include": ["src/**/*", "prisma/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist", ".next"]
}
